  gem "activerecord", "~> 5.2.4"
  gem "rails-controller-testing", "~> 1.0.2"
end

appraise "ar-6.0" do
  gem "activerecord", "~> 6.0.3"
  gem "rails-controller-testing", "~> 1.0.3"
end
